{
	"formatter": {
		"indentStyle": "tab",
		"lineWidth": 120
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noApproximativeNumericConstant": "off",
				"noAssignInExpressions": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noParameterAssign": "off",
				"useEnumInitializers": "off",
				"useImportType": "off",
				"useNodejsImportProtocol": "off",
				"useNumberNamespace": "off",
				"useTemplate": "off",
				"noUselessElse": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noStaticOnlyClass": "off",
				"noThisInStatic": "off",
				"noUselessSwitchCase": "off",
				"useArrowFunction": "off",
				"useLiteralKeys": "off",
				"useOptionalChain": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": false
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"files": {
		"ignore": ["**/package.json", "coverage/**", "packages/*/dist/**"]
	}
}
